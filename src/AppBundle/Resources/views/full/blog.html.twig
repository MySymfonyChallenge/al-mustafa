{% extends 'AppBundle::pagelayout.html.twig' %}

{% block content %}
    <div class="blog">
        <div class="blog-top-banner">
            <div class="container">
                Developer<span>Blog</span>
            </div>
        </div>
        <div class="container">
        {% for blog in pagerBlogs %}
            {{render_esi(controller('ez_content:viewLocation',{'locationId':blog.contentInfo.mainLocationId,'viewType':'line'}) )}}
        {% endfor %}
            <div class="row">
                <div class="blog-load-more col-md-6 col-md-offset-3">
                    {% if pagerBlogs.haveToPaginate() %}
                    <div class="pagerfanta">
                        {{ pagerfanta( pagerBlogs, 'twitter_bootstrap_translated', {'routeName': location} ) }}
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}