{% extends 'AppBundle::pagelayout.html.twig' %}

{% block content %}
    <h1>{{ez_content_name(content)}}</h1>
    <div>{{ ez_field( content, "description" ).value }}</div>
    {% if (alreadyApplied) %}
        <span>You have Already Applied for this Trip on {{alreadyApplied|date('m.d.Y H:i:s')}}</span>
    {% else %}
        {% if notLoggedIn %}
            <div>Please <a href="{{path('login')}}">login</a> here to be able to register for this Trip.</div>
            {% else %}
                {{ form_start(form, { 'attr': {'class': 'attendence_form'} },{'method': 'POST'}) }}
                {{ form_widget(form) }}
                    <button type="button" class="submit">Publish</button>
                {{ form_end(form) }}
                <div id="resultUpdate"></div>
        {% endif %}
    {% endif %}
{% endblock %}